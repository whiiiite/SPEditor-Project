@model SPEditor.Entityes.ViewModels.RegisterUserViewModel
@{
    ViewData["Register"] = "Login";
}
@section AddToHead {
    <link href="@Url.Content("~/css/pages-styles/common.css")" rel="stylesheet" type="text/css" />
}

<form class="common-form" asp-controller="Users" asp-action="Register" method="post">
    <label>Email</label>
    <input class="text-form-field" asp-for="Email" name="Email" type="email" />
    <label>Username</label>
    <input class="text-form-field" asp-for="UserName" name="Username" type="text" />
    <label>Password</label>
    <input class="text-form-field" asp-for="Password" name="Password" type="password" />
    <label>Confirm password</label>
    <input class="text-form-field" asp-for="ConfirmPassword" name="ConfirmPassword" type="password" />
    <button id="register-button" type="submit">Register</button>
    <div id="error-field" asp-validation-summary="All" class="text-danger"></div>
</form>

<div class="junk"></div>
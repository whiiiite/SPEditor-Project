@{
    ViewData["Title"] = "Login";
}
@section AddToHead {
    <link href="@Url.Content("~/css/pages-styles/common.css")" rel="stylesheet" type="text/css"/>
}

<form class="common-form" asp-controller="Users" asp-action="Login"
      method="post">
    <label>Email</label>
    <input id="email-field" class="text-form-field" name="Email" type="email" />
    <label>Your Password</label>
    <input id="psw-field" class="text-form-field" name="Password" type="password" />
    <input type='submit' value='Login' onclick="return clickSubmit();">
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

<div id="errordiv" style="color: red; display: flex; justify-content: center;"></div>
<div class="junk"></div>

@section Scripts {
    <script src="~/js/pages-js/Users/Login.js"></script>
}
